# Configuration Wagoo Desktop
# Copiez ce fichier en .env et modifiez les valeurs pour votre environnement

# Mode développement
IS_DEV=false

# URLs
DEV_BASE_URL=http://localhost:3000/dashboard
PROD_BASE_URL=https://dashtest.wagoo.app/dashboard

DEV_WS_URL=ws://localhost:9876
PROD_WS_URL=wss://dashtest.wagoo.app

# Ports réseau
WS_PORT=9876
DISCOVERY_PORT=9877

# Service
SERVICE_NAME=wagoo-desktop

# Sécurité WebSocket
WS_MAX_CONNECTIONS=100
WS_RATE_LIMIT_WINDOW_MS=60000
WS_RATE_LIMIT_MAX_MESSAGES=100

# Timeouts (en ms)
FETCH_TIMEOUT=5000
WS_HEARTBEAT_INTERVAL=30000
WS_CONNECTION_TIMEOUT=10000

# Logging
LOG_LEVEL=info
LOG_SIZE_BYTES=5242880
LOG_MAX_BACKUPS=3

# Localhost sécurisé (true) ou 0.0.0.0 (false)
WS_LOCALHOST_ONLY=true
