{
  "name": "electron-nextjs-app",
  "version": "1.0.7",
  "description": "Electron wrapper sécurisé pour un site Next.js, avec auto-update et session persistante.",
  "main": "main.js",
  "author": "leo-lb29",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "publish": "electron-builder --publish always"
  },
  "build": {
    "appId": "app.wagoo.electron",
    "protocols": {
      "name": "Wagoo",
      "schemes": [
        "wagoo"
      ]
    },
    "productName": "MyApp",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "package.json",
      "assets/**/*",
      "out/**/*",
      "logo.ico"
    ],
    "win": {
      "icon": "assets/icons/icons/win/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "leo-lb29",
        "repo": "wagoo-desktop-v2"
      }
    ]
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12",
    "electron-icon-maker": "^0.0.5"
  }
}
