{
  "name": "wagoo",
  "version": "1.0.1",
  "description": "Electron wrapper sécurisé pour un site Next.js, avec auto-update et session persistante.",
  "main": "main.js",
  "author": {
    "name": "leo-lb29",
    "email": "contact@wagoo.app"
  },
  "scripts": {
    "start": "electron . ",
    "build": "electron-builder",
    "publish": "electron-builder --publish always",
    "icons": "pnpx electron-icon-maker --input=./assets/logo.png --output=./assets"
  },
  "build": {
    "appId": "app.wagoo.electron",
    "protocols": {
      "name": "Wagoo",
      "schemes": [
        "wagoo"
      ]
    },
    "productName": "Wagoo Desktop",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "logger.js",
      ".env",
      "package.json",
      "assets/**/*",
      "logo.ico"
    ],
    "win": {
      "icon": "assets/icons/win/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "assets/icons/png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "wagoo-app",
        "repo": "desktop"
      }
    ]
  },
  "dependencies": {
    "bonjour": "^3.5.0",
    "dotenv": "^17.2.3",
    "electron-log": "^5.4.3",
    "electron-notifications": "^1.0.0",
    "electron-updater": "^6.6.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "electron": "^38.7.2",
    "electron-builder": "^26.0.12"
  }
}
