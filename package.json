{
  "name": "electron-nextjs-app",
  "version": "1.0.4",
  "description": "Electron wrapper sécurisé pour un site Next.js, avec auto-update et session persistante.",
  "main": "main.js",
  "author": "leo-lb29",
  "scripts": {
    "dev": "concurrently \"pnpm --filter web-app dev\" \"wait-on http://localhost:3000 && electron .\"",
    "start": "electron .",
    "build": "electron-builder",
    "publish": "electron-builder --publish always"
  },
  "build": {
    "appId": "app.wagoo.electron",
    "productName": "MyApp",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "package.json",
      "assets/**/*",
      "out/**/*",
      "logo.ico"
    ],
    "win": {
      "icon": "assets/icons/icons/win/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "leo-lb29",
        "repo": "wagoo-desktop-v2"
      }
    ]
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "electron-store": "^11.0.1"
  },
  "devDependencies": {
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12",
    "concurrently": "^8.2.0",
    "wait-on": "^7.0.1"
  }
}
