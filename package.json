{
  "name": "wagoo",
  "version": "1.0.27",
  "description": "Electron wrapper sécurisé pour un site Next.js, avec auto-update et session persistante.",
  "main": "main.js",
  "author": {
    "name": "leo-lb29",
    "email": "contact@wagoo.app"
  },
  "scripts": {
    "start": "electron . ",
    "build": "electron-builder",
    "publish": "electron-builder --publish always",
    "icons": "pnpx electron-icon-maker --input=./assets/logo.png --output=./assets/icons"
  },
  "build": {
    "appId": "app.wagoo.electron",
    "protocols": {
      "name": "Wagoo",
      "schemes": [
        "wagoo"
      ]
    },
    "productName": "Wagoo Desktop",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "package.json",
      "assets/**/*",
      "out/**/*",
      "logo.ico"
    ],
    "win": {
      "icon": "assets/icons/icons/win/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "assets/icons/png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "leo-lb29",
        "repo": "wagoo-desktop-v2"
      }
    ]
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12"
  }
}
